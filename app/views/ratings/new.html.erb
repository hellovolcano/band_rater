<h1>New Rating</h1>

<%= form_for @rating do |f| %>
  <% if @rating.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rating.errors.count, "error") %> prohibited this rating from being saved:</h2>

      <ul>
      <% @rating.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :band %>
    <%= f.collection_select :band_id, Band.find(:all), :id, :name %>
  </div>
  <% (0..5).each do |i| %>
    <div class="field">
      <%= f.radio_button :rating, i%><%= i %> 
    </div>
  <% end %>
  <div class="action">
    <%= f.submit %>
  </div>
<% end %>
